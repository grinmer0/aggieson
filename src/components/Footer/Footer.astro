---
import Center from "../Center.astro";
import { SubscribeForm } from "../Subscribe/SubscribeForm";
---

<footer>
  <Center>
    <div class="content">
      <div class="links">
        <a href="/about" data-fathom="footer-link">About</a>
        <a href="/guestbook" data-fathom="footer-link">Guestbook</a>
        <a href="/rss.xml" data-fathom="footer-link">RSS</a>
        <a href="/colophon" data-fathom="footer-link">Colophon</a>
      </div>
      <div class="links">
        <a
          href="https://github.com/aggie8on"
          target="_blank"
          data-fathom="footer-link">GitHub</a
        >
        <a
          href="https://x.com/aggie8on"
          target="_blank"
          data-fathom="footer-link">LinkedIn</a
        >
      </div>
      <div class="banner">
        <a>Copyrights 2025 Aggieson.
        </a>
      </div>
      <div class="subscribe">
        <SubscribeForm client:visible />
      </div>
    </div>
  </Center>
</footer>

<style lang="scss">
  footer {
    font-size: var(--step-0);
    padding-block: var(--space-2xl);
    width: 100%;
    border-top: 1px solid var(--gray-6);
  }

  .content {
    display: grid;
    grid-template: "links1 links2 form" 1fr "banner banner form" auto / 0.5fr 0.5fr 2fr;
    gap: var(--space-m) var(--space-xl);

    @media (width < 650px) {
      grid-template: "form form" "links1 links2" "banner banner" / 1fr 1fr;
      gap: var(--space-xl);
    }
  }

  .links {
    display: flex;
    align-items: flex-start;
    flex-flow: column wrap;
    --link-padding-block: 0.2em;
    margin-block-start: calc(var(--link-padding-block) * -1);

    @media (width < 650px) {
      --link-padding-block: 0.4em;
    }

    a {
      display: inline-block;
      padding-block: var(--link-padding-block);
    }

    &:first-child {
      grid-area: links1;
    }

    &:last-child {
      grid-area: links2;
    }
  }

  .copyright {
    color: var(--gray-11);
  }

  .banner {
    grid-area: banner;
    color: var(--gray-11);
    display: flex;
    align-items: center;
    gap: var(--space-m);
    transition: background-color 0.2s ease-in-out;

    a {
      text-decoration: none;

      @media (hover: hover) and (pointer: fine) {
        &:hover {
          color: var(--gray-12);
        }
      }
    }

    .emoji {
      transform: scale(1.5) translateY(0.01em);
    }
  }

  .subscribe {
    grid-area: form;
  }
</style>

<script>
  import * as Fathom from "fathom-client";

  document.addEventListener("astro:page-load", () => {
    document
      .querySelectorAll("[data-fathom='footer-link']")
      .forEach((navlink) => {
        navlink.addEventListener("click", () => {
          const url = navlink.getAttribute("href");
          Fathom.trackEvent(`nav: click link (${url})`);
        });
      });
  });
</script>
